{
  "version": 2,
  "builds": [
    {
      "src": "Backend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/Backend/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}